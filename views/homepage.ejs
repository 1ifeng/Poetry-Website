<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/common.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="top-header">
      <div class="top-container">
        <div class="site-logo">
          <a href="/"><img src="/images/site_logo.png" alt=""></a>
        </div>
        <% if (!user) { %>
          <div class="status-area">
            <a href="/login">登 录</a>
          </div>
        <% } else { %>
          <div class="user-block" user-id="<%= user._id %>" user-name="<%= user.username%>" >
            <div class="avatar">
              <img src="<%= user.avatarUrl%>" alt="">
              <ul class="dropdown-list ">
                <li><a href="javascript:">我的主页</a></li>
                <li><a href="/logout">登出</a></li>
              </ul>
            </div>
          </div>
        <% } %>
      </div>
    </div>
    <div class="top-panel">
      <div class="division">
        <div class="release-note">
          <a href="javascript:">个人主页</a>
        </div>
      </div>
      <div class="container">
        <div class="profile-brief">
          <div class="head-portrait" style="background-image: url('<%= guest.avatarUrl%>')"></div>
          <div class="user-name"><%= guest.username %></div>
          <div class="setting-link">
            <% if (user._id == guest._id) { %>
              <a href="/user/settings">设置</a>
            <% } else { %>
              <a href="javascript:">关注</a>
            <% } %>
          </div>
        </div>
        <div class="user-poetry-list">

        </div>
      </div>
    </div>
    <script src="/javascripts/jquery-1.10.2.min.js"></script>
    <script src="/javascripts/site_js.js"></script>
  </body>
</html>
